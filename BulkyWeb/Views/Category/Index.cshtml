@model List<Category>
<partial name="_Notification" />
    <div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                Category List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-area="" asp-controller="Category" asp-action="Create">
                Add New Category  <i class="bi bi-plus-circle-dotted"></i> </a>
          
        </div>
    </div>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
        {
            <tr>
                <td>@obj.Name</td>
                <td>
                    @obj.DisplayOrder
                </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
 <a class="btn btn-primary mx-2" asp-controller="Category" asp-route-id="@obj.Id" asp-action="Edit">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            <a class="btn btn-danger mx-2" asp-route-id="@obj.Id" asp-controller="Category" asp-action="Delete">
                                <i class="bi bi-trash2"></i> Delete
                            </a>
                        </div>
                    </td>
            </tr>
        }
    </tbody>
</table>
</div>
